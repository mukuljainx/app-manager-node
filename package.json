{
  "name": "node-typescript-babel-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Node Typescript Babel Boilerplate/Stater kit",
  "private": false,
  "scripts": {
    "start:build": "node ./lib/server",
    "start": "npx tsc-watch --onSuccess 'npm run serve'",
    "serve": "npx nodemon --exec babel-node --extensions '.ts' --inspect ./src/server.ts",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel ./src --out-dir './lib' --extensions '.ts' --source-maps inline"
  },
  "lint-staged": {
    "{src}/**/*.ts*": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@types/debug": "^4.1.5",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.5",
    "debug": "4.3.1",
    "dotenv": "9.0.0",
    "ejs": "^3.1.6",
    "express": "4.17.1",
    "extract-zip": "^2.0.1",
    "morgan": "1.10.0",
    "multer": "^1.4.2",
    "serve-favicon": "2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "7.13.16",
    "@babel/core": "7.14.0",
    "@babel/node": "7.13.13",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-numeric-separator": "7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "7.13.8",
    "@babel/preset-env": "7.14.1",
    "@babel/preset-typescript": "7.13.0",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.11",
    "@types/morgan": "1.9.2",
    "@types/multer": "^1.4.5",
    "babel-eslint": "10.0.3",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-preset-latest": "6.24.1",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "tsc-watch": "4.2.9",
    "tslint": "5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "4.2.4"
  }
}
