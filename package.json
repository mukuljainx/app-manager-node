{
  "name": "node-typescript-babel-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Node Typescript Babel Boilerplate/Stater kit",
  "private": false,
  "scripts": {
    "start:build": "node ./lib/server",
    "start": "npx tsc-watch --onSuccess 'npm run serve'",
    "serve": "npx nodemon --exec babel-node --extensions '.ts' --inspect ./src/server.ts",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel ./src --out-dir './lib' --extensions '.ts' --source-maps inline"
  },
  "lint-staged": {
    "{src}/**/*.ts*": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@types/debug": "^4.1.5",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.4",
    "debug": "4.1.1",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "morgan": "1.9.1",
    "serve-favicon": "2.5.0"
  },
  "devDependencies": {
    "lint-staged": "9.4.2",
    "husky": "3.0.9",
    "typescript": "3.6.4",
    "@babel/preset-env": "7.6.3",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.1",
    "@types/morgan": "1.7.37",
    "babel-plugin-module-resolver": "3.2.0",
    "@babel/cli": "7.6.4",
    "@babel/core": "7.6.4",
    "@babel/node": "7.6.3",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-numeric-separator": "7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "7.6.2",
    "@babel/preset-typescript": "7.6.0",
    "babel-eslint": "10.0.3",
    "babel-preset-latest": "6.24.1",
    "nodemon": "1.19.4",
    "prettier": "1.18.2",
    "tsc-watch": "4.0.0",
    "tslint": "5.20.0",
    "tslint-config-prettier": "^1.18.0"
  }
}
